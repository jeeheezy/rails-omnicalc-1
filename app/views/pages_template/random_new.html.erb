<form action="/random/results">
  <div>
    <label for="min_number">Minimum</label>
    <input type="text" name="minimum" id="min_number" placeholder="E.g. 1.5">
  </div>
  <div>
    <label for="max_number">Maximum</label>
    <input type="text" name="maximum" id="max_number" placeholder="E.g. 4.5">
  </div> 
  <button style="display:block">Pick a random number</button>
</form>
